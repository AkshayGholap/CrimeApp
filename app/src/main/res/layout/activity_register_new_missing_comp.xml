<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registerNewMissingComp"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="30dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                >
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:src="@drawable/newentriesmissingcomp"
                    android:layout_weight="0.4"

                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text=" Note your\nComplaint here.."
                    android:textSize="22dp"
                    android:textColor="@color/loginBtnColor"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:fontFamily="@font/abhaya_libre_bold"
                    android:layout_marginTop="30dp"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/etNameMissingComp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:layout_marginHorizontal="35dp"
                android:ems="10"
                android:drawableStart="@drawable/baseline_person_24"
                android:inputType="textPersonName"
                android:hint="Name"
                android:drawablePadding="12dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/custom_input_edittext_corneredbg"
                android:elevation="10dp"
                />
            <EditText
                android:id="@+id/etAgeMissingComp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_input_edittext_corneredbg"
                android:ems="10"
                android:drawableStart="@drawable/age"
                android:inputType="number"
                android:drawablePadding="12dp"
                android:hint="Age"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:elevation="10dp"
                />
            <EditText
                android:id="@+id/etGenderMissingComp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_input_edittext_corneredbg"
                android:ems="10"
                android:drawableStart="@drawable/gender"
                android:inputType="text"
                android:drawablePadding="12dp"
                android:hint="Male/Female"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:elevation="10dp"
                />
            <EditText
                android:id="@+id/etHeightMissingComp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_input_edittext_corneredbg"
                android:ems="10"
                android:drawableStart="@drawable/height"
                android:inputType="number"
                android:drawablePadding="12dp"
                android:hint="Height in cm"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:elevation="10dp"
                />
            <EditText
                android:id="@+id/etLocationMissingComp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_input_edittext_corneredbg"
                android:ems="10"
                android:drawableStart="@drawable/location"
                android:inputType="textPostalAddress"
                android:drawablePadding="12dp"
                android:hint="Last known location"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:elevation="10dp"
                />
            <EditText
                android:id="@+id/etDescriptionMissingComp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/custom_input_edittext_corneredbg"
                android:ems="10"
                android:drawableStart="@drawable/description"
                android:inputType="text|textMultiLine"
                android:drawablePadding="12dp"
                android:hint="Description"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:elevation="10dp"
                />
            <EditText
                android:id="@+id/etPhonenumberMissingComp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_input_edittext_corneredbg"
                android:ems="10"
                android:drawableStart="@drawable/call"
                android:inputType="number"
                android:drawablePadding="12dp"
                android:hint="Phone"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:elevation="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capture Image : "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/loginBtnColor" />
                <ImageView
                    android:id="@+id/captureImage_register_new_miss_comp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/camera"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Image Preview : "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/loginBtnColor"
                    android:gravity="center_vertical"
                    />
                <ImageView
                    android:id="@+id/capturedImagePreview_newMissingComp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginHorizontal="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    />
            </LinearLayout>




            <androidx.appcompat.widget.AppCompatButton

                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textColor="@color/white"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/login_btn_bg"

                />





            <!--            <LinearLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:orientation="horizontal"-->
            <!--               android:gravity="center"-->
            <!--                android:layout_marginTop="20dp"-->
            <!--                android:padding="10dp"-->
            <!--                >-->
            <!--                <ImageView-->
            <!--                    android:layout_width="30dp"-->
            <!--                    android:layout_height="30dp"-->
            <!--                    android:src="@drawable/baseline_person_24"-->
            <!--                    />-->
            <!--                <TextView-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="match_parent"-->
            <!--                    android:text="Admin Login"-->
            <!--                    android:textAlignment="center"-->
            <!--                    android:gravity="center"-->
            <!--                    />-->
            <!--            </LinearLayout>-->


        </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/progressbar_RegisterNewMissingComp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="100dp"
        app:cardElevation="5dp"
        android:layout_centerInParent="true"
        >
        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/progressbar_background"
            />
    </androidx.cardview.widget.CardView>


</RelativeLayout>