<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="30dp"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="10dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.8"
            android:paddingLeft="20dp"
            >
            <TextView
                android:id="@+id/welcomeTextview_dashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Hello, Akshay"
                android:textSize="22sp"
                android:textColor="@color/loginBtnColor"
                android:textStyle="bold"
                android:fontFamily="@font/abhaya_libre_bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Register your complaint here..."
                android:textColor="@color/loginBtnColorlight"
                android:textStyle="bold"
                android:fontFamily="@font/abhaya_libre_bold"
                />

        </LinearLayout>
       <ImageView
           android:id="@+id/logoutBtn_dashboard"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="0.2"
           android:src="@drawable/baseline_logout_24"
           android:layout_gravity="center"
           />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/missingCompaint_cardview_dashboard"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_weight="0.45"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginRight="40dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        >

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:src="@drawable/missing_complaint"
                            android:scaleType="fitCenter"
                            app:civ_border_color="#FDDADDF3"
                            app:civ_border_width="1dp"
                            app:civ_shadow="true"
                            app:civ_shadow_radius="3dp"
                            app:civ_shadow_color="#70707A"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Missing\nComplaint"
                            android:textSize="16sp"
                            android:textColor="@color/loginBtnColorlight"
                            android:fontFamily="@font/alegreya_sans_medium"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/crimeCompaint_cardview_dashboard"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_weight="0.45"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginVertical="5dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:src="@drawable/crimecomplaint"
                            android:scaleType="fitCenter"
                            app:civ_border_color="#FDDADDF3"
                            app:civ_border_width="1dp"
                            app:civ_shadow="true"
                            app:civ_shadow_radius="3dp"
                            app:civ_shadow_color="#70707A"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Crime\nComplaint"
                            android:textSize="16sp"
                            android:textColor="@color/loginBtnColorlight"
                            android:fontFamily="@font/alegreya_sans_medium"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/nearFireStations_cardview_dashboard"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_weight="0.45"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginRight="40dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:src="@drawable/firestations"
                            android:scaleType="fitCenter"
                            app:civ_border_color="#FDDADDF3"
                            app:civ_border_width="1dp"
                            app:civ_shadow="true"
                            app:civ_shadow_radius="3dp"
                            app:civ_shadow_color="#70707A"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Nearest\nfirestation "
                            android:textSize="16sp"
                            android:textColor="@color/loginBtnColorlight"
                            android:fontFamily="@font/alegreya_sans_medium"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/nearPoliceStations_cardview_dashboard"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_weight="0.45"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginVertical="5dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:src="@drawable/baseline_local_police_24"
                            android:scaleType="fitCenter"
                            app:civ_border_color="#FDDADDF3"
                            app:civ_border_width="1dp"
                            app:civ_shadow="true"
                            app:civ_shadow_radius="3dp"
                            app:civ_shadow_color="#70707A"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Nearest Police stations"
                            android:textSize="16sp"
                            android:textColor="@color/loginBtnColorlight"
                            android:fontFamily="@font/alegreya_sans_medium"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
</RelativeLayout>