<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/menuCard_placeOrder"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        >

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/crimeImage_CrimeComp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:layout_gravity="center_vertical"
                            android:padding="5dp"
                            android:scaleType="centerInside"
                            />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:orientation="vertical"
                            android:weightSum="1"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            >
                            <TextView
                                android:id="@+id/victimName_CrimeComp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.3"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMaxTextSize="16sp"
                                android:autoSizeMinTextSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:fontFamily="@font/alice"
                                android:text="Akshay"
                                />
                            <TextView
                                android:id="@+id/crtimeId_CrimeComp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"
                                android:fontFamily="@font/alice"
                                android:textColor="@color/colorDivider1"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMaxTextSize="14sp"
                                android:autoSizeMinTextSize="12sp"
                                android:text="Missing | Crime Id : 2022000202020"
                                />

                            <TextView
                                android:id="@+id/crimePhone_CrimeComp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"
                                android:fontFamily="@font/alice"
                                android:textColor="@color/colorDivider1"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMaxTextSize="14sp"
                                android:autoSizeMinTextSize="12sp"
                                android:text="Phone  : 9585541258"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.3"
                                android:orientation="horizontal"
                                android:weightSum="1"
                                >

                                <TextView
                                    android:id="@+id/crimeDate_CrimeComp"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:text="Date : 24-09-2022"
                                    android:fontFamily="@font/alice"
                                    android:textColor="@color/colorTextPrimary1"
                                    android:autoSizeTextType="uniform"
                                    android:autoSizeMaxTextSize="14sp"
                                    android:autoSizeMinTextSize="9sp"
                                    android:gravity="center_vertical"
                                    />

                                <TextView
                                    android:id="@+id/crimeLocation_CrimeComp"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:text="Place : Mulund"
                                    android:fontFamily="@font/alice"
                                    android:textColor="@color/colorTextPrimary1"
                                    android:autoSizeTextType="uniform"
                                    android:autoSizeMaxTextSize="14sp"
                                    android:autoSizeMinTextSize="9sp"
                                    android:gravity="center_vertical"
                                    />


                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:paddingTop="10dp"
                    android:background="#23BDBDBD"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:autoSizeMaxTextSize="16sp"
                            android:autoSizeMinTextSize="14sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/alice"
                            android:text="Vic.Age"
                            android:gravity="center_horizontal"
                            />

                        <TextView
                            android:id="@+id/crimeAge_CrimeComp"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:autoSizeMaxTextSize="16sp"
                            android:autoSizeMinTextSize="12sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/alice"
                            android:gravity="center_horizontal"

                            android:text="27" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:orientation="vertical"
                        android:weightSum="1"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:autoSizeMaxTextSize="16sp"
                            android:autoSizeMinTextSize="14sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/alice"
                            android:text="Com.Name"
                            android:gravity="center_horizontal"
                            />

                        <TextView
                            android:id="@+id/crimeComplainerName_CrimeComp"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:autoSizeMaxTextSize="16sp"
                            android:autoSizeMinTextSize="12sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/alice"
                            android:gravity="center_horizontal"
                            android:text="Akshay" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:orientation="vertical"
                        android:weightSum="1"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:autoSizeMaxTextSize="16sp"
                            android:autoSizeMinTextSize="14sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/alice"
                            android:text="Vic.Gender"
                            android:gravity="center_horizontal"
                            />

                        <TextView
                            android:id="@+id/crimegender_CrimeComp"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:autoSizeMaxTextSize="16sp"
                            android:autoSizeMinTextSize="12sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/alice"
                            android:gravity="center_horizontal"
                            android:text="Male" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:orientation="vertical"
                        android:weightSum="1"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:autoSizeMaxTextSize="16sp"
                            android:autoSizeMinTextSize="14sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/alice"
                            android:text="Status"
                            android:gravity="center_horizontal"
                            />

                        <TextView
                            android:id="@+id/crimeStatus_CrimeComp"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:autoSizeMaxTextSize="16sp"
                            android:autoSizeMinTextSize="12sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/alice"
                            android:gravity="center_horizontal"
                            android:text="Open" />

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>



</RelativeLayout>